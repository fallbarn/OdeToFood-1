@page
@model ListModel
@{
    ViewData["Title"] = "Restaurants";
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control"
                   asp-for="SearchTerm" />
            <span>
                <button class="btn btn-default">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

@foreach (var restaurant in Model.Restaurants)
{
    // sle note: the below VisStud special html calls a partial view, found in
    // the same directory, called _Summary.cshtml. By convention (not enforced) partial
    // views prepended with '_'.
    // Note: 'var restaurant' is passed as a parameter (aka the Model);
    // _Summary.cshtml must have @using OdeToFood.Core and @model Restaurant to find the Type.
    <partial name="_Summary" model="restaurant" />
}

<a asp-page="./Edit" class="btn btn-outline-primary">Add New</a>

@section footer {
    <!-- SLE note: if surrounded in a amp section, then place in the footer section in _layout.cshtml-->
    <!-- SLE note: amp&Model.Message is pulled from the attribute of the List.cs, which in this case is from config["Message"]; -->
    <div>@Model.Message</div>
    <p>This is a foot test</p>
}