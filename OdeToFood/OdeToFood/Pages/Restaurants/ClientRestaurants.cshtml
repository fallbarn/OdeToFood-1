@page
@model OdeToFood.Pages.Restaurants.ClientRestaurantsModel
@{
    ViewData["Title"] = "ClientRestaurants";
}

<h2>Client Restaurants</h2>

<table class="table" id="restaurants">

</table>

@section Scripts {
        <script src="~/node_modules/datatables.net/js/jquery.dataTables.js"></script>
        <script src="~/node_modules/datatables.net-bs/js/dataTables.bootstrap.js"></script>
        <link href="~/node_modules/datatables.net-bs/css/dataTables.bootstrap.css" rel="stylesheet" />
    
        <script>

            $(function () {

                var cuisines = ["Unknown", "Mexican", "Italian", "Indian"]

                $.ajax("/apiSimon/restaurants/",
                    { method: "get" })
                    .then(function (response) {
                        /*SLE note: An external jquery plugin from https://Datatables.net is used here (dataTable). Takes the reponse and formats the specified table.*/
                        $("#restaurants").dataTable({ 
                            data: response,
                            columns: [
                                { "data": "name" },
                                { "data": "location" },
                                {
                                    /* the value 'cuisine' is rendered by the func as the parameter 'data'.*/
                                    "data": "cuisine", "render": function (data) {                                      
                                        return cuisines[data];
                                    }
                                }
                            ]
                        });
                    });
            });


        </script>
}

